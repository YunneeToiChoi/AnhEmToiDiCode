@model AirBNB_Admin.Models.Room

@{
    ViewBag.Title = "Product_Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Detail</h2>
<h4>Rooms</h4>
<div>

    <hr />
    <dl class="dl-horizontal">
        <div class="card bg-gradient-danger card-img-holder text-white">
            <div class="card-body" style="text-align:center">
                <img src="~/_layoutAdmin/assets/images/dashboard/circle.svg" class="card-img-absolute" alt="circle-image">
                <img style="border-radius:0%!important" src="@Url.Content(Model.Images_Room)" height="150" width="150" id="previewImg" />
                <div style="padding:20px"></div>
                <h4 class="font-weight-normal mb-3" style="display:flex;align-items:center;justify-content:center">
                    ID<i style="padding-left:10px" class="mdi mdi-account-card-details"></i>
                </h4>
                @Html.DisplayFor(model => model.Id_Room, new { @class = "mb-5" })
                <div style="padding:20px"></div>
                <h4 class="font-weight-normal mb-3" style="display:flex;align-items:center;justify-content:center">
                    NAME<i style="padding-left:10px" class="mdi mdi-account-card-details"></i>
                </h4>
                @Html.DisplayFor(model => model.Room_Name, new { @class = "mb-5" })
                <div style="padding:20px"></div>
                <h4 class="font-weight-normal mb-3" style="display:flex;align-items:center;justify-content:center">
                    PRICE<i style="padding-left:10px" class="mdi mdi-account-card-details"></i>
                </h4>
                @Html.DisplayFor(model => model.Price, new { @class = "mb-5" })
                <div style="padding:20px"></div>
                <h4 class="font-weight-normal mb-3" style="display:flex;align-items:center;justify-content:center">
                    DESCRIPTION<i style="padding-left:10px" class="mdi mdi-account-card-details"></i>
                </h4>
                @Html.DisplayFor(model => model.Room_Discription, new { @class = "mb-5" })
                <div style="padding:20px"></div>
                <h4 class="font-weight-normal mb-3" style="display:flex;align-items:center;justify-content:center">
                    CATE-ID<i style="padding-left:10px" class="mdi mdi-account-card-details"></i>
                </h4>
                @Html.DisplayFor(model => model.ID_Cate, new { @class = "mb-5" })
                <div style="padding:20px"></div>
                <h4 class="font-weight-normal mb-3" style="display:flex;align-items:center;justify-content:center">
                    IMG-LINK<i style="padding-left:10px" class="mdi mdi-comment-alert-outline"></i>
                </h4>
                @Html.DisplayFor(model => model.Images_Room, new { @class = "mb-5" })
                <div style="padding:20px"></div>
            </div>
        </div>
        <div style="padding:20px"></div>
        <div class="form-actions no-color">
            @Html.ActionLink("Edit", "Product_Edit", "Admin_Product", new { id = Model.ID_Cate }, new { @class = "btn btn-gradient-primary me-2" })
            @Html.ActionLink("Cancel", "Product_Control", "Admin_Product", new { @class = "btn btn-light" })
        </div>
    </dl>
