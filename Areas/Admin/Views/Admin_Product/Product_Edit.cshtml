@model AirBNB_Admin.Models.Room

@{
    ViewBag.Title = "Product_Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Product_Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Rooms</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <p class="card-description"> Edit</p>
            <form class="forms-sample">
                <div class="form-group">
                    <label style="display:block" for="exampleInputEmail3">ID</label>
                    @Html.EditorFor(model => model.Id_Room, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Id_Room, "", new { @class = "exampleInputEmail3" })
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Name</label>
                    @Html.EditorFor(model => model.Room_Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Room_Name, "", new { @class = "exampleInputEmail3" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Price</label>
                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Price, "", new { @id = "exampleInputEmail3" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Description</label>
                    @Html.EditorFor(model => model.Room_Discription, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Room_Discription, "", new { @id = "exampleInputEmail3" })
                </div>
                <div class="form-group">
                    <label>File upload</label>
                    <input type="file" name="UploadImage" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled="" placeholder="Upload Image">
                        <span class="input-group-append">
                            <label for="uploadimg" class="file-upload-browse btn btn-gradient-primary" type="button">Upload</label>
                            <input id="uploadimg" style="display:none" type="file" name="UploadImage" onchange="ChangeImage(this,document.getElementById('previewImg'))" />
                        </span>
                    </div>
                    <img src="@Url.Content(Model.Images_Room)" height="150" width="150" id="previewImg" />
                </div>
                <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                @*<button type "submit"class="btn btn-light">Cancel</button>*@
                @Html.ActionLink("Cancel", "Category_Control", "Admin_Category", new { @class = "btn btn-light" })
            </form>
        </div>
    </div>
}