@model AirBNB_Admin.Models.Category

@{
    ViewBag.Title = "Category_Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm("Category_Edit", "Admin_Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Category</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body">
            <form class="forms-sample">
                <div class="form-group">
                    <label style="display:block" for="exampleInputName1">ID</label>
                    @Html.EditorFor(model => model.ID_Cate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ID_Cate, "", new { @id = "exampleInputEmail3" })
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Name</label>
                    @Html.EditorFor(model => model.Name_Cate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name_Cate, "", new { @id = "exampleInputEmail3" })
                </div>
                <div class="form-group">
                    <label>File upload</label>
                    <input type="file" name="UploadImage" class="file-upload-default">
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled="" placeholder="Upload Image">
                        <span class="input-group-append">
                            <label for="uploadimg" class="file-upload-browse btn btn-gradient-primary" type="button">Upload</label>
                            <input id="uploadimg" style="display:none" type="file" name="UploadImage" onchange="ChangeImage(this,document.getElementById('previewImg'))" />
                        </span>
                    </div>
                    <img src="@Url.Content(Model.Image_Cate)" height="150" width="150" id="previewImg" />
                </div>
                <button type="submit" class="btn btn-gradient-primary me-2">Submit</button>
                @*<button type "submit"class="btn btn-light">Cancel</button>*@
                @Html.ActionLink("Cancel", "Category_Control", "Admin_Category", new { @class = "btn btn-light" })
            </form>
        </div>
    </div>
}
