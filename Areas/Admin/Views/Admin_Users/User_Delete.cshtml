@model AirBNB_Admin.Models.User


@{
    ViewBag.Title = "User_Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>User_Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="dl-horizontal">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Recent Tickets</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th> Name </th>
                                <th> Email </th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>  @Html.DisplayFor(model => model.ID_User) </td>
                                <td>  @Html.DisplayFor(model => model.User_Name, new { @id = "exampleInputEmail3" })</td>
                                <td>
                                    @Html.DisplayFor(model => model.Email, new { @class = "badge badge-gradient-success" })
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-gradient-primary me-2" />
                            @Html.ActionLink("Cancel", "User_Control", "Admin_Users", new { @class = "btn btn-light" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </dl>
</div>