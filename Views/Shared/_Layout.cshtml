    <script>
        var boxfilterforuser = document.querySelector('.form-filter--overplay')
        var form = document.querySelector('.form-filter--modal')
        var filterbox = document.querySelector('.box-loc')
        var icfilterbox = document.querySelector('.filterbox-ic')
        var headerSearch = document.querySelector('.nav-middle')
        var searchMenu = document.querySelectorAll('.menu-mobile__box')
        for (var i = 0; i < searchMenu.length; i++) {
            searchMenu[0].addEventListener('click', moboxfilter)
        }
        headerSearch.addEventListener('click', moboxfilter)
        filterbox.addEventListener('click', moboxfilter)
        function moboxfilter() {
            form.classList.add('active')
        }
        boxfilterforuser.addEventListener('click', closefilterbox)
        icfilterbox.addEventListener('click', closefilterbox)
        function closefilterbox() {
            form.classList.remove('active')
        }
        document.addEventListener('DOMContentLoaded', function () {
            var checkbox = document.getElementById('checkboxInput');
            var item = document.querySelector('.oo');
            var items = document.querySelector('.ee')
            if (checkbox) {
                checkbox.addEventListener('change', function () {
                    if (checkbox.checked) {
                        console.log('Checkbox is checked');
                        item.style.display = "none";
                        items.style.display = "block";
                    } else {
                        console.log('Checkbox is unchecked')
                        item.style.cssText = "block !important";
                        items.style.cssText = "none !important";

                    }
                });
            }
        });
        document.addEventListener("DOMContentLoaded", function () {
            var load = document.querySelector('.container_Load');
            setTimeout(timeLoad, 1500);

            function timeLoad() {
                load.classList.add('none');
            }
        });
    </script>
