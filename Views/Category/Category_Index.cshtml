@model IEnumerable<AirBNB_Admin.Models.Category>


<style>
    .filter__price{
        padding:20px;
        display:flex;
        justify-content:center;
        align-items:center;
    }
    .filter__input{
        padding:18px 10px;
        border-radius:10px;
    }
    .type__category{
        align-items:center;
        justify-content:space-around;
        font-size:2rem;
        margin-bottom:20px;
    }
    .category__block {
        padding: 24px;
        border: 1px solid #DDDDDD;
        border-radius: 10px;
        margin-bottom:10px;
        margin-right:10px
    }
    .category__block:hover{
        border: 1px solid black;
        transition:0.3s;
        cursor:pointer;
    }
    .end__box{
        display:flex;
        align-items:center;
        justify-content:space-between;
        width:100%;
        padding:24px;
        font-size:1.8rem;
    }
    .box__delete{
        color:black;
        padding:8px 10px;
    }
        .box__delete:hover {
            background-color: #DDDDDD;
        }
        .end__btn {
            color: white;
            background-color: black;
            padding: 10px;
            opacity: 0.8;
            text-decoration: none;
            border-radius: 12px;
        }
    .end__btn:hover{
        opacity:1;
        color:white !important;
    }
</style>


<div class="menu">
    <div class="grid wide">
        <div class="menu__container">
            <div class="menu-left col ">
                @foreach (var menu in Model)
                {
                    <a href="/Product/Product_Index?cateid=@menu.ID_Cate" class="menu__box ">
                        <img src="@Url.Content(menu.Image_Cate)" style="width : 26px" class="menu__img" />
                        <h4 class="menu__header">@Html.DisplayFor(x => menu.Name_Cate)</h4>
                        <div class="menu__box-border-bt"></div>
                    </a>
                }
            </div>
            <div style="display:flex" class="menu-right l-6 m-6 c-2">
                <div class="menu-right__box navbar__box box-loc">
                    <i class="menu-icon fa-solid fa-filter"></i>
                    <span style="font-size:1.6rem;margin-left:6px;" class="menu__content boloc">Bộ lọc</span>
                </div>
                <div class="menu-right__box navbar__box box-price">
                    <p class="menu__content">Hiển thị tổng trước thuế</p>
                    <input type="checkbox" id="checkboxInput" />
                    <label for="checkboxInput" class="toggleSwitch">
                    </label>
                </div>
            </div>
        </div>
        <div class="form-filter--modal">
            <div class="form-filter--overplay"></div>

            <div style="position: fixed; z-index: 10;background-color:white; display:none; left:20%; width:60%" class="filter-form">
                <div class="vadition__header pdlr24">
                    <div class="vadition__header-icon vadition__header-icon--ic filterbox-ic actives"><i class="fa-solid fa-x"></i></div>
                    <header class="vadition__header-tittle">Bộ lọc</header>
                </div>
                <hr />
                @*END HEADER
                BEGIN BOX*@
                <div class="vadition__box pd24" style="height:auto;">
                    <h1 style="margin-bottom: 20px;" class="vadition__box-tittle">
                        Khoảng giá
                    </h1>
                    <div class="filter__price" style="margin-bottom: 60px">
                        <input class="filter__input" style="width:40%" placeholder="Min" />
                        <span style="margin: 0px 20px"> ---- </span>
                        <input class="filter__input" style="width:40%" placeholder="Max" />
                    </div>
                    <hr />
                </div>
                <div class="vadition__box pd24" style="height:auto">
                    <h1 style="margin-bottom: 20px;" class="vadition__box-tittle">
                        Loại nhà/phòng
                    </h1>
                    <div class="type__category row">
                        <div class="category__block col l-3 m-6 c-12">
                            <i class="category__icon fa-solid fa-house"></i>
                            <p>Nhà</p>
                        </div>
                        <div class="category__block col l-3 m-6 c-12">
                            <i class="fa-solid fa-building"></i>
                            <p>Căn hộ</p>
                        </div>
                        <div class="category__block col l-3 m-6 c-12">
                            <i class="fa-solid fa-hotel"></i>
                            <p>Khách sạn</p>
                        </div>
                    </div>

                    <hr />
                </div>
                <div class="end__box">
                    <a href="#" class="box__delete">Xóa tất cả</a>
                    <a href="" class="end__btn">Hiển thị 600 địa điểm</a>
                </div>
            </div>

            </div>
    </div>

</div>
@*@Html.Action("Product_Index", "Product")*@
