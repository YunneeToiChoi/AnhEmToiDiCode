@model IEnumerable<AirBNB_Admin.Models.Category>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var load = document.querySelector('.container_Load');
        setTimeout(timeLoad, 1500);

        function timeLoad() {
            load.classList.add('none');
        }
    });
</script>
<style>
    .filter__price {
        padding: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .filter__input {
        padding: 18px 10px;
        border-radius: 10px;
    }

    .type__category {
        align-items: center;
        justify-content: space-around;
        font-size: 2rem;
        margin-bottom: 20px;
    }

    .category__block {
        padding: 24px;
        border: 1px solid #DDDDDD;
        border-radius: 10px;
        margin-bottom: 10px;
        margin-right: 10px
    }

        .category__block:hover {
            border: 1px solid black;
            transition: 0.3s;
            cursor: pointer;
        }

    .end__box {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        padding: 24px;
        font-size: 1.8rem;
    }

    .box__delete {
        color: black;
        padding: 8px 10px;
    }

        .box__delete:hover {
            background-color: #DDDDDD;
        }

    .end__btn {
        color: white;
        background-color: black;
        padding: 10px;
        opacity: 0.8;
        text-decoration: none;
        border-radius: 12px;
    }
        .end__btn:hover {
            opacity: 1;
            color: white !important;
        }
</style>
<div class="menu">
    <div class="grid wide">
        <div class="menu__container row">
            <div style="display:flex" class="menu-left col l-7 m-12 c-12">
                @foreach (var menu in Model)
                {
                    <a href="/Product/Product_Index?cateid=@menu.ID_Cate" class="menu__box ">
                        <img src="@Url.Content(menu.Image_Cate)" style="width : 26px" class="menu__img" />
                        <h4 class="menu__header">@Html.DisplayFor(x => menu.Name_Cate)</h4>
                        <div class="menu__box-border-bt"></div>
                    </a>
                }
            </div>
            <div style="display:flex" class="menu-right col l-5 m-4 c-12">
                <div class="menu-right__box navbar__box hide-on-tablet box-loc ">
                    <i class="menu-icon fa-solid fa-filter"></i>
                    <span style="font-size:1.6rem;margin-left:6px;" class="menu__content boloc">Bộ lọc</span>
                </div>
                <div class="menu-right__box navbar__box box-price">
                    <p class="menu__content">Hiển thị tổng trước thuế</p>
                    <input type="checkbox" id="checkboxInput" />
                    <label for="checkboxInput" class="toggleSwitch">
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>

