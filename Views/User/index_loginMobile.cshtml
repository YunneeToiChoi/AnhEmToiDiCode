@{
    ViewBag.Title = "index_loginMobile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .field-validation-error {
        color: red;
    }
    .menu{
        display : none;
    }
</style>
<link rel="stylesheet" href="~/Assests/CSS/FORM/VADITION.css" />
<link rel="stylesheet" href="~/Assests/CSS/Base_css/base.css" />

