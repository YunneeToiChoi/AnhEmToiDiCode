@model AirBNB_Admin.Models.User
@{
    ViewBag.Title = "RegisterUserMobile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .field-validation-error {
        color: red;
        font-size: 1.4rem;
    }
    .menu{
        display : none;
    }
</style>
<link rel="stylesheet" href="~/Assests/CSS/FORM/VADITION.css" />
<link rel="stylesheet" href="~/Assests/CSS/Base_css/base.css" />

@using (Html.BeginForm("RegisterUser", "User", FormMethod.Post, new { enctype = "multipartform/data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div style="max-width: 600px; margin: auto">
    <div class="vadition__header pdlr24">
        <header class="vadition__header-tittle">Sign up</header>
    </div>
    <hr />
    @*END HEADER
        BEGIN BOX*@
    <div style="height: 100%!important; overflow-y: hidden!important" class="vadition__box pd24">
        <h1 style="margin-bottom: 20px;" class="vadition__box-tittle">
            Welcome to Airbnb
        </h1>
        <form class="vadition__box-form">
            @if (ViewBag.ErrorRegister != null)
            {
                <span class ="field-validation-error">@ViewBag.ErrorRegister</span>
            }
            <div style="display:none" class="vadition__box-wrapper">
                <p class="vadition__box-tittle--input">@Html.LabelFor(model => model.ID_User) </p>
                @Html.EditorFor(model => model.ID_User, new { htmlAttributes = new { placeholder = "Nhap ID_User", @readonly = "readonly" } })
                <p>@Html.ValidationMessageFor(model => model.ID_User)</p>
            </div>
            <div class="vadition__box-wrapper">
                <p class="vadition__box-tittle--input">@Html.LabelFor(model => model.Email) </p>
                <input type="email" data-val="true" data-val-email="Please enter a valid email" id="Email_User" name="Email" value="" class="login__input" placeholder="Nhap Email" />
                <p>@Html.ValidationMessageFor(model => model.Email)</p>
            </div>
            <div class="vadition__box-wrapper">
                <p class="vadition__box-tittle--input">@Html.LabelFor(model => model.User_Name) </p>
                @Html.EditorFor(model => model.User_Name, new { htmlAttributes = new { placeholder = "Nhap User" } })
                <p>@Html.ValidationMessageFor(model => model.User_Name)</p>
            </div>
            <div class="vadition__box-wrapper">
                <p class="vadition__box-tittle--input">@Html.LabelFor(model => model.Password) </p>
                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { placeholder = "Your Password " } })
                <p>@Html.ValidationMessageFor(model => model.Password)</p>
            </div>
            <div class="vadition__box-wrapper">
                <p class="vadition__box-tittle--input">@Html.LabelFor(model => model.ConfirmPassword) </p>
                @Html.PasswordFor(model => model.ConfirmPassword, new { htmlAttributes = new { placeholder = "Confirm Your Password" } })
                <p>@Html.ValidationMessageFor(model => model.ConfirmPassword)</p>

            </div>
            <div class="vadition__box-decripstion">
                We’ll call or text you to confirm your number. Standard message and data rates apply.
                <p class="vadition__box-privacyPolity">Privacy Policy</p>
            </div>
            <button type="submit" class="btn vadition__box-submit">Continue</button>
        </form>
    </div>
</div>

}

